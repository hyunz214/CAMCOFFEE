<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:background="#f4e5d2"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#835f54">

            <ImageView
                android:id="@+id/side_open"
                android:layout_width="57dp"
                android:layout_height="62dp"
                android:padding="15dp"
                android:src="@drawable/icon_sidemenu" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="2"
                android:adjustViewBounds="true"
                android:maxWidth="10dp"
                android:maxHeight="35dp"
                android:padding="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/camcoffee_text" />

            <ImageView
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:padding="15dp"
                android:src="@drawable/icon_basket" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="214dp"
                android:src="@drawable/camcoffee_main_banner" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_espresso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:paddingLeft="15dp"
                    android:paddingBottom="15dp"
                    android:src="@drawable/bt_main_coffee" />

                <ImageView
                    android:id="@+id/btn_tea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="15dp"
                    android:src="@drawable/bt_main_tea" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/btn_ade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:paddingLeft="15dp"
                    android:paddingBottom="15dp"
                    android:src="@drawable/bt_main_smoothie" />

                <ImageView
                    android:id="@+id/btn_dessert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="15dp"
                    android:src="@drawable/bt_main_dessert" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:orientation="vertical"
                android:background="#e8d2ba">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CamCoffee"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Made by CAMBUSTEAM"
                    android:paddingLeft="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="KaKao"
                    android:paddingLeft="10dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



<include layout="@layout/sidebar" />


</android.support.v4.widget.DrawerLayout>